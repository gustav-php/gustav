{
  "name": "gustav-php/gustav",
  "description": "A modern HTTP Framework for PHP.",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "sabre/http": "^6.0",
    "haydenpierce/class-finder": "^0.5.1",
    "symfony/console": "^6.2",
    "latte/latte": "^3.0"
  },
  "scripts": {
    "test": "./vendor/bin/pest",
    "example": [
      "Composer\\Config::disableProcessTimeout",
      "./bin/gustav-php serve 0.0.0.0:4201 ./example/index.php"
    ],
    "check": "./vendor/bin/phpstan analyze",
    "lint": "./vendor/bin/pint --test src tests",
    "format": "./vendor/bin/pint src tests"
  },
  "require-dev": {
    "laravel/pint": "^1.1",
    "phpstan/phpstan": "^1.8",
    "pestphp/pest": "^2.4"
  },
  "bin": [
    "./bin/gustav-php"
  ],
  "autoload": {
    "psr-4": {
      "GustavPHP\\Gustav\\": "src/",
      "GustavPHP\\Example\\": "example/"
    }
  },
  "authors": [
    {
      "name": "Torsten Dittmann",
      "email": "torsten.dittmann@googlemail.com"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "platform": {
      "php": "8.1.0"
    }
  }
}