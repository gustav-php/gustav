{
  "name": "torstendittmann/gustav",
  "description": "A modern HTTP Framework for PHP.",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "sabre/http": "^6.0"
  },
  "scripts": {
    "test": "./vendor/bin/pest",
    "example": "php -S localhost:1337 ./example/index.php",
    "check": "./vendor/bin/phpstan analyze",
    "lint": "./vendor/bin/pint --test src tests",
    "format": "./vendor/bin/pint src tests"
  },
  "require-dev": {
    "laravel/pint": "^1.1",
    "phpstan/phpstan": "^1.8",
    "pestphp/pest": "^2.4"
  },
  "autoload": {
    "psr-4": {
      "TorstenDittmann\\Gustav\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Torsten Dittmann",
      "email": "torsten.dittmann@googlemail.com"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "platform": {
      "php": "8.1.0"
    }
  }
}
