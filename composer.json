{
  "name": "gustav-php/gustav",
  "description": "A modern HTTP Framework for PHP.",
  "homepage": "https://gustav-php.github.io",
  "keywords": ["framework", "gustav"],
  "type": "library",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/gustav-php/gustav/issues",
    "source": "https://github.com/gustav-php/gustav"
  },
  "require": {
    "php": ">=8.2",
    "ext-fileinfo": "*",
    "haydenpierce/class-finder": "^0.5.1",
    "latte/latte": "^3.0",
    "nyholm/psr7": "^1.8",
    "php-di/php-di": "^7.0",
    "spiral/roadrunner-cli": "^2.5",
    "spiral/roadrunner-http": "^3.2",
    "symfony/console": "^6.2",
    "symfony/process": "^6.3"
  },
  "scripts": {
    "test": "@php ./vendor/bin/pest",
    "demo": [
      "Composer\\Config::disableProcessTimeout",
      "@php ./bin/gustav-php dev ./demo/index.php"
    ],
    "check": "@php ./vendor/bin/phpstan analyze",
    "lint": "@php ./vendor/bin/pint --test src tests demo",
    "format": "@php ./vendor/bin/pint src tests demo",
    "post-install-cmd": "@php ./vendor/bin/rr get-binary"
  },
  "require-dev": {
    "laravel/pint": "^1.1",
    "phpstan/phpstan": "^1.8",
    "pestphp/pest": "^2.4"
  },
  "bin": ["./bin/gustav-php"],
  "autoload": {
    "psr-4": {
      "GustavPHP\\Gustav\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GustavPHP\\Demo\\": "demo/"
    }
  },
  "authors": [
    {
      "name": "Torsten Dittmann",
      "email": "torsten.dittmann@googlemail.com"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "platform": {
      "php": "8.2.0"
    }
  }
}
